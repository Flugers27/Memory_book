# Application
APP_NAME="Memory Book UAT Service"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=uat

# Server
HOST=0.0.0.0
PORT=8000

# Database - Используем созданного пользователя wb
DATABASE_URL=postgresql+asyncpg://wb:admin@localhost:5432/memory_book_UAT?search_path=public,sys

# Security
SECRET_KEY=your-secure-secret-key-for-jwt-tokens-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Service User (для справки)
SERVICE_DB_USER=wb
# Пароль не храним в plain text в реальном проекте